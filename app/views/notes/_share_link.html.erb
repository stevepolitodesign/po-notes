<% if @note.public? %>
    <div class="flex">
        <button class="js-copy-to-clipboard whitespace-no-wrap bg-white text-black border border-white flex items-center px-2 py-1 text-sm focus:outline-none focus:bg-blue-600 focus:text-white hover:bg-blue-600 hover:text-white" data-clipboard-target="#js-clipboard-source">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" class="fill-current h-4 mr-2"><path d="M4 10c0-1.1.9-2 2-2h8c1.1 0 2 .9 2 2v8c0 1.1-.9 2-2 2H6c-1.1 0-2-.9-2-2v-8zm2 0v8h8v-8h-2V8H8v2H6zm3-6.17V16h2V3.83l3.07 3.07 1.42-1.41L10 0l-.7.7-4.8 4.8 1.42 1.4L9 3.84z"/></svg>
            <span>Share Note</span>
        </button>
        <label for="js-clipboard-source" class="sr-only">Share Link</label>
        <input type="text" readonly value="<%= request.base_url + note_path(@note) %>" id="js-clipboard-source" class="input--thin w-auto text-sm text-white border border-l-0 border-white bg-transparent" />
    </div>
<% end %>