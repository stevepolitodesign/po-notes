<div class="pt-4 pb-3 border-t border-gray-700">
    <div class="flex items-center px-5">
        <div class="flex-shrink-0">
          <img class="h-10 w-10 rounded-full" src="<%= gravatar_url(current_user.email) %>" />
        </div>
        <div class="ml-3">
          <div class="mt-1 text-sm font-medium leading-none text-gray-400"><%= current_user.email %></div>
        </div>
    </div>
    <div class="mt-3 px-2" role="menu" aria-orientation="vertical" aria-labelledby="user-menu">
        <%= link_to "Your Profile", edit_user_registration_path, class: "block px-3 py-2 rounded-md text-base font-medium text-gray-400 hover:text-white hover:bg-gray-700 focus:outline-none focus:text-white focus:bg-gray-700", role: :menuitem %>
        <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "mt-1 block px-3 py-2 rounded-md text-base font-medium text-gray-400 hover:text-white hover:bg-gray-700 focus:outline-none focus:text-white focus:bg-gray-700", role: :menuitem %>
    </div>
</div>