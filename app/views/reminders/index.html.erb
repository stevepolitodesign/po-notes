<%= content_for :title do "My Reminders" end %>
<%= content_for :page_links do %>
    <div class="md:flex justify-between flex-wrap items-end">
        <div class="md:flex mt-3 mb-3 md:mb-0 md:mb-0 lg:mb-0 xl:mb-0">
            <%= link_to new_reminder_path, class: "text-white border border-white flex items-center px-2 py-1 text-sm focus:outline-none focus:bg-white focus:text-black hover:bg-white hover:text-black" do %>
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" class="fill-current h-3 mr-2"><path d="M11 9h4v2h-4v4H9v-4H5V9h4V5h2v4zm-1 11a10 10 0 1 1 0-20 10 10 0 0 1 0 20zm0-2a8 8 0 1 0 0-16 8 8 0 0 0 0 16z"/></svg>
                Add a Reminder
            <% end %>          
        </div>
    </div>
<% end %>
<% unless @reminders.empty? %>
    <%= render layout: "shared/tables/table" do %>
        <%= render layout: "shared/tables/thead" do %>
            <%= render layout: "shared/tables/th" do "Name" end %>
            <%= render layout: "shared/tables/th" do "Body" end %>
            <%= render layout: "shared/tables/th" do "Date" end %>
        <% end %>
        <%= render layout: "shared/tables/tbody" do %>
            <%= render @reminders %>
        <% end %>
    <% end %>
<% else %>
    <p>You have no upcoming reminders. <%= link_to "Add a reminder", new_reminder_path %></p>
<% end %>