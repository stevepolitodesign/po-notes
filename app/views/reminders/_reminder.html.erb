<%= tag.tr do %>
    <%= tag.td do %>
        <%= reminder.name %>
    <% end %>
    <%= tag.td do %>
        <%= reminder.body %>
    <% end %>
    <%= tag.td do %>
        <%#  TODO Format this to be relative to `reminder.user.time_zone` %>
        <%= time_ago_in_words(reminder.time) %> from now on <%= reminder.time.strftime("%c") %>
    <% end %>
    <%= tag.td do %>
        <%= link_to "Edit", edit_reminder_path(reminder) %>
    <% end %>
<% end %>